<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_about_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="База сообщений содержит записи с датой, превышающей выбранный Вами срок хранения записей. \n \n Нажав на соответствующую кнопку Вы можете удалить старые записи." />

        <Button
            android:id="@+id/bt_vfy_0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_button"
            android:minHeight="30dp"
            android:text="черновики" />
        
        <Button
            android:id="@+id/bt_vfy_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_button"
            android:minHeight="30dp"
            android:text="входящие" />
        
        <Button
            android:id="@+id/bt_vfy_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_button"
            android:minHeight="30dp"
            android:text="отправленные" />
        
        <Button
            android:id="@+id/bt_vfy_4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_button"
            android:minHeight="30dp"
            android:text="исходящие" />

    </LinearLayout>

</LinearLayout>
